# =============================================================================
# RideOn Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Option 1: Use DATABASE_URL for cloud databases (Neon, Supabase, etc.)
# DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Option 2: Use individual environment variables for local development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rideon_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_64_character_random_string_here
JWT_EXPIRES_IN=24h

REFRESH_TOKEN_SECRET=another_64_character_random_string_here
REFRESH_TOKEN_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# Stripe Payment Integration
# -----------------------------------------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# -----------------------------------------------------------------------------
# Twilio SMS Integration
# -----------------------------------------------------------------------------
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# AWS S3 Configuration (File Storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=rideon-uploads

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@rideon.com
SMTP_PASSWORD=your_app_password_here

# -----------------------------------------------------------------------------
# Geocoding Configuration
# -----------------------------------------------------------------------------
# Options: nominatim (free), google (requires API key)
GEOCODING_PROVIDER=nominatim
GOOGLE_MAPS_API_KEY=

# -----------------------------------------------------------------------------
# Default Pricing Configuration
# -----------------------------------------------------------------------------
DEFAULT_BASE_FARE=2.50
DEFAULT_PER_KM_RATE=1.50
DEFAULT_PER_MINUTE_RATE=0.30
DEFAULT_BOOKING_FEE=1.00
DEFAULT_MINIMUM_FARE=5.00
DEFAULT_CANCELLATION_FEE=3.00
PLATFORM_COMMISSION_RATE=20

# -----------------------------------------------------------------------------
# Driver Search Configuration
# -----------------------------------------------------------------------------
DRIVER_SEARCH_RADIUS_KM=5
MAX_DRIVERS_TO_NOTIFY=5
RIDE_REQUEST_TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Frontend URLs (for Next.js apps)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_MAPS_API_KEY=
NEXT_PUBLIC_STRIPE_KEY=pk_test_xxx
